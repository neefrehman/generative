{
    "name": "generative",
    "author": "@neefrehman",
    "description": "A digital playground for experimenting with generative art, WebGL and Machine Learning",
    "homepage": "https://generative.neef.co",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/neefrehman/Generative.git"
    },
    "license": "MIT",
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "export": "next export",
        "start": "next start",
        "format": "prettier \"src/**/*.{js,ts,tsx}\"",
        "format:fix": "prettier \"src/**/*.{js,ts,tsx}\" --write",
        "lint": "eslint \"src/**/*.{js,ts,tsx}\"",
        "lint:fix": "eslint \"src/**/*.{js,ts,tsx}\" --fix",
        "format-glsl": "clang-format -style=file **/*.frag **/*.vert **/*.glsl",
        "format-glsl:fix": "clang-format -i -style=file **/*.frag **/*.vert **/*.glsl",
        "typecheck": "tsc"
    },
    "dependencies": {
        "@react-three/cannon": "^4.6.1",
        "@react-three/drei": "^8.8.3",
        "@react-three/fiber": "^7.0.26",
        "@react-three/postprocessing": "^2.1.2",
        "@react-three/xr": "^3.3.0",
        "glsl-easings": "^1.0.0",
        "glsl-hsl2rgb": "^1.1.0",
        "glsl-noise": "0.0.0",
        "glsl-smooth-min": "^1.0.0",
        "glsl-worley": "^1.0.2",
        "glslify": "^7.1.1",
        "glslify-hex": "^2.1.1",
        "gsap": "^3.9.1",
        "leva": "^0.9.18",
        "linaria": "^2.3.1",
        "make-matrix": "^1.3.1",
        "next": "^12.0.10",
        "next-linaria": "^0.11.0",
        "nice-color-palettes": "^3.0.0",
        "p5": "^1.4.1",
        "postprocessing": "^6.23.5",
        "preact": "^10.6.5",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-use-gesture": "^9.1.3",
        "simplex-noise": "^3.0.1",
        "three": "^0.137.5",
        "three-stdlib": "^2.8.6"
    },
    "devDependencies": {
        "@babel/core": "^7.17.0",
        "@types/node": "^17.0.15",
        "@types/p5": "^1.4.0",
        "@types/prettier": "^2.4.3",
        "@types/react": "^17.0.39",
        "@types/three": "^0.137.0",
        "@typescript-eslint/eslint-plugin": "^5.10.2",
        "@typescript-eslint/parser": "^5.10.2",
        "babel-plugin-glsl": "^1.0.0",
        "clang-format": "^1.6.0",
        "eslint": "^8.8.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-next": "^12.0.10",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^2.5.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-prettier": "^4.0.0",
        "file-loader": "^6.2.0",
        "glslify-loader": "^2.0.0",
        "lint-staged": "^12.3.3",
        "prettier": "^2.5.1",
        "raw-loader": "^4.0.2",
        "simple-git-hooks": "^2.7.0",
        "typescript": "^4.5.5"
    },
    "glslify": {
        "transform": [
            "glslify-hex"
        ]
    },
    "lint-staged": {
        "*.(js|ts|tsx)": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "simple-git-hooks": {
        "pre-commit": "lint-staged"
    }
}
